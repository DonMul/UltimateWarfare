{% extends 'base.html.twig' %}

{% block body %}
    <tr>
        <td id="container_content" align="center" class="text">
            {% if user is not defined or user == null %}
                <b>Welcome to the Ultimate-Warfare forums!</b>
                <br />
                You are currently not logged in, you can only view the forums now. <a class="B" href="{{ path('Site/Login') }}">Click here to login!</a>
            {% else %}
                You are logged in as <b>{{ user.username|escape }}</b>. Back to <a class="B" href="{{ path('Game/Headquarter') }}">Game</a>?
            {% endif %}

            <br />
            <br />

            {% for msg in app.flashes('success') %}
                <div class="success" id="success">
                    {{ msg }}
                </div>
            {% endfor %}

            {% for msg in app.flashes('error') %}
                <div class="error" id="error">
                    {{ msg }}
                </div>
            {% endfor %}

            {% block content %}{% endblock %}
        </td>
    </tr>
{% endblock %}
