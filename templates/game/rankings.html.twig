{% extends 'game.html.twig' %}
{% block content %}
    <p class="text-center">
        Rankings by: <a class="B" href="{{ path('Game/Rankings', {'sortBy': 'networth'}) }}">Networth</a> - <a class="B" href="{{ path('Game/Rankings') }}">Regions</a>
    </p>

    <table class="table text text-center">
        <tr>
            <td class="tabletop" colspan="4"><b>{{ rankingsTitle }}</b></td>
        </tr>
        <tr>
            <td width="100"><b>Rank</b></td>
            <td class="text-left" width="300"><b>Player</b></td>
            <td width="150"><b>Regions</b></td>
            <td width="150"><b>Networth</b></td>
        </tr>
        {% for player in players %}
            <tr>
                <td width="50">{{ loop.index }}</td>
                <td class="text-left" width="200">{{ player.name|escape }}
                    {% if player.federation != null %}
                        <i> ( {{ player.federation.name }} )</i>
                    {% endif %}
                </td>
                <td>{{ player.regions }}</td>
                <td>{{ player.networth }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
