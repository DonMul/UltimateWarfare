{% extends 'game.html.twig' %}

{% block title %}
    Ultimate Warfare - Change Federation name
{% endblock title %}

{% block content %}
    <form action="{{ path('Game/Federation/Remove') }}" method="post">
        <table width="700" border="1" align="center" class="table text">
            <tr>
                <td class="tabletop"><b>Delete Federation</b></td>
            </tr>
            <tr>
                <td>
                    <p>
                        Are you sure you want to do this?
