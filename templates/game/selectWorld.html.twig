{% extends 'noBarBase.html.twig' %}

{% block title %}
    Ultimate Warfare - Select World
{% endblock title %}

{% block content %}
    <table border="1" width="700" cellspacing="0" cellpadding="0" align="center" class="table text">
        <tr><td class="tabletop"><b>Select your World</b></td></tr>
        <tr>
            <td>
                Welcome <strong>{{ user.username|escape }}</strong>
                <br />
                <br />
                On this page you will see a list of all "game worlds", select the world you would like to play here!<br>
                You are able to play in multiple worlds at the same time on 1 account!<br />
                <b>BUT</b> you are not allowed to create multiple accounts to play in 1 world!
            </td>
        </tr>
    </table>
    <br /><br />

    {% for world in worlds %}
        <table border="1" cellspacing="0" cellpadding="0" align="center" class="table text">
            <tr>
                <td width="400">
                    <b>{{ world.name|escape }}</b><br />
                    <img src="{{ asset(world.image) }}" width="400" height="255">
                </td>
                <td width="300">
                    <b>Max players:</b> {{ world.maxplayers|escape }}<br /><br />
                    <b>Info:</b><br />
                    {{ world.info|escape }}<br /><br />
                    <b>At start:</b><br />
                    Cash: {{ world.cash|escape }}<br />
                    Wood: {{ world.wood|escape }}<br />
                    Steel: {{ world.steel|escape }}<br />
                    Food: {{ world.food|escape }}<br /><br />
                    <a class="B" href="{{ path('Game/SelectName', {'worldId': world.id}) }}"><b>Play this World</b></a>
                </td>

            </tr>
        </table>
    {% endfor %}
{% endblock %}
